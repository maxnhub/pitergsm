.mainly__image {
    width: 100%;
    height: 100%;
    opacity: 0;
    transform: translateX(-100%);
    transition: 1s;
    &--show {
        opacity: 1;
        transform: translateX(0%);
    }
    &-img {
        max-width: 100%;
        max-height: 100%;
        width: 100%;
        height: 100%;
    }
}