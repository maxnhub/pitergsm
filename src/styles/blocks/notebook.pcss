.notebook {
    width: 1740px;
    height: 812px;
    @include desktop {
        height: 510px;
    }
    @include phones {
        height: 14.875rem;
    }
    &__image {
        position: absolute;
        top: -135px;
        left: 191px;
        max-width: 100%;
        max-height: 100%;
        @include phones {
            top: -2.4375rem;
            left: 5.9375rem;
        }
        @include phones320 {
            left: 3.9375rem;
        }
    }
}
